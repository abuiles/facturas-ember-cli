<div class="panel panel-default">
  <div class="panel-heading">
    <div class="input-group custom-search-form">
      {{input value=searchText class="form-control" placeholder="Busqueda..."}}
    </div>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <tr>
          <th>{{link-to "Nombres" (query-params sortBy="firstName")}}</th>
          <th>{{link-to "Apellido" (query-params sortBy="lastName")}}</th>
          <th>{{link-to "Tel√©fono" (query-params sortBy="phone")}}</th>
          <th>{{link-to "Deuda" (query-params sortBy="balance")}}</th>
        </tr>
        {{#each filteredClients}}
          <tr class="client-row">
            <td>{{#link-to 'clients.show' this}}{{firstName}}{{/link-to}}</td>
            <td>{{lastName}}</td>
            <td>{{phone}}</td>
            <td>{{balance}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
